<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_marginTop="10dp"
    android:layout_marginHorizontal="10dp"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/llClsBg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/order_shape_btn_gray"
        app:layout_constraintTop_toTopOf="parent"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        app:layout_constraintStart_toStartOf="parent"
        android:paddingHorizontal="10dp"
        android:paddingVertical="6dp">


        <com.common.library.widget.imageview.RoundedImageView
            android:id="@+id/ivGoodsCover"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginEnd="5dp"
            android:background="@drawable/order_shape_btn_gray_corner_5"
            android:scaleType="centerCrop"
            app:riv_corner_radius="3dp"
            app:riv_oval="false" />


        <TextView
            android:id="@+id/tvTypeName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ff13202d"
            android:textSize="14sp"
            tools:text="分类2" />

    </LinearLayout>

    <Space
        android:id="@+id/spa"
        android:layout_width="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="@id/llClsBg"
        android:layout_height="10dp"/>

    <ImageView
        android:id="@+id/ivState"
        app:layout_constraintStart_toStartOf="@id/spa"
        android:layout_width="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/spa"
        android:src="@mipmap/ivqh"
        android:layout_height="0dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>