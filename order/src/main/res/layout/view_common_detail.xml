<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fitsSystemWindows="false">
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBar"
        android:fitsSystemWindows="false"
        android:layout_width="match_parent"
        android:stateListAnimator="@drawable/appbarlayout_elevated"
        android:layout_height="wrap_content">
        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:id="@+id/collapsingtoolbarlayout"
            android:layout_width="match_parent"
            android:fitsSystemWindows="false"
            android:layout_height="wrap_content"
            android:elevation="0dp"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            app:layout_scrollFlags="scroll|exitUntilCollapsed"
            app:titleEnabled="false">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:fitsSystemWindows="false"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:statusBarScrim="@color/colorMain"
                app:contentScrim="@color/colorMain">
                <ImageView
                    android:id="@+id/imageview"
                    android:layout_width="match_parent"
                    android:fitsSystemWindows="false"
                    android:layout_height="0dp"
                    android:background="@drawable/indexbg"
                    android:scaleType="centerCrop"
                    app:layout_collapseMode="parallax"
                    app:layout_constraintDimensionRatio="w,102:360"
                    app:layout_constraintTop_toTopOf="parent" />
<!--                android:background="@drawable/indexbg"-->
                <View
                    android:id="@+id/guideLine"
                    android:layout_width="match_parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="20dp"
                    app:layout_constraintRight_toRightOf="parent"
                    android:layout_height="?attr/actionBarSize"/>
                <com.cq.jd.order.widget.mzbanner.MZBannerView
                    android:id="@+id/banner"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    app:canLoop="true"
                    android:layout_marginHorizontal="@dimen/dp_10"
                    app:layout_constraintTop_toBottomOf="@id/guideLine"
                    app:middle_page_cover="false"
                    app:open_mz_mode="false"
                    app:layout_constraintDimensionRatio="w,15:34"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:layout_marginTop="20dp"
                android:fitsSystemWindows="false"
                android:elevation="0dp"
                app:navigationIcon="@mipmap/icbackwhite"
                android:navigationIcon="@mipmap/icbackwhite"
                app:titleMargin="15dp"
                android:background="@color/colorMain"
                android:gravity="center"
                app:layout_collapseMode="pin">
                <LinearLayout
                    android:id="@+id/llSearch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/order_shape_search_bg"
                    android:paddingStart="45dp"
                    android:paddingTop="5dp"
                    android:paddingEnd="45dp"
                    android:paddingBottom="5dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableStart="@mipmap/ic_search"
                        android:textColor="#ffffff"
                        android:drawablePadding="15dp"
                        android:gravity="center"
                        android:hint="搜索本店商品"
                        android:textSize="16sp" />
                </LinearLayout>
<!--                <TextView-->
<!--                    android:layout_width="wrap_content"-->
<!--                    android:layout_height="wrap_content"-->
<!--                    android:layout_gravity="center"-->
<!--                    android:text="商品详情"-->
<!--                    android:textColor="#ffffffff"-->
<!--                    android:textSize="18sp" />-->
                <ImageView
                    android:id="@+id/ivMore"
                    android:layout_width="wrap_content"
                    android:padding="10dp"
                    android:layout_gravity="end"
                    android:src="@mipmap/ic_share_more"
                    android:layout_height="wrap_content"/>
            </androidx.appcompat.widget.Toolbar>
        </com.google.android.material.appbar.CollapsingToolbarLayout>
    </com.google.android.material.appbar.AppBarLayout>

</merge>