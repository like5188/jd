<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="false">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="false"
        android:stateListAnimator="@drawable/appbarlayout_elevated"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:id="@+id/collapsingtoolbarlayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fitsSystemWindows="false"
            app:contentScrim="#FFAA32"
            app:layout_scrollFlags="scroll|exitUntilCollapsed"
            app:titleEnabled="false">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fitsSystemWindows="false">

                <ImageView
                    android:id="@+id/imageview"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:background="@color/colorMain"
                    android:fitsSystemWindows="false"
                    android:scaleType="centerCrop"
                    app:layout_collapseMode="parallax"
                    app:layout_constraintDimensionRatio="w,154:360"
                    app:layout_constraintTop_toTopOf="parent" />

                <Space
                    android:id="@+id/spTop"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    app:layout_constraintBottom_toBottomOf="@id/imageview" />

                <!--                android:background="@drawable/order_shape_titlebg_coupon"-->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/clShopInfo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:background="@drawable/shape_goods_bg"
                    android:paddingHorizontal="10dp"
                    android:paddingVertical="20dp"
                    app:layout_constraintTop_toTopOf="@id/spTop">

                    <ImageView
                        android:id="@+id/ivLogo"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:background="#30395877"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/tvName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:background="@null"
                        android:maxEms="12"
                        android:maxLines="1"
                        android:textColor="#ff13202d"
                        android:textSize="16sp"
                        app:layout_constraintStart_toEndOf="@id/ivLogo"
                        app:layout_constraintTop_toTopOf="@id/ivLogo"
                        tools:text="海派健身" />

                    <ImageView
                        android:id="@+id/ivCollect"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:src="@mipmap/icollect"
                        app:layout_constraintBottom_toBottomOf="@id/tvName"
                        app:layout_constraintHorizontal_weight="1"
                        app:layout_constraintStart_toEndOf="@id/tvName"
                        app:layout_constraintTop_toTopOf="@id/tvName" />


                    <LinearLayout
                        android:id="@+id/llInfo"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical|bottom"
                        android:orientation="horizontal"
                        app:layout_constraintBottom_toBottomOf="@id/ivLogo"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="@id/tvName">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="￥"
                            android:textColor="#ff13202d"
                            android:textSize="10sp" />

                        <TextView
                            android:id="@+id/tvSinglePrice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0/人"
                            android:textColor="#ff13202d"
                            android:textSize="14sp" />

                        <Space
                            android:layout_width="0dp"
                            android:layout_height="10dp"
                            android:layout_weight="1" />


                        <TextView
                            android:id="@+id/tvDistance"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawableStart="@mipmap/ivaddress"
                            android:drawablePadding="5dp"
                            android:gravity="center"
                            android:text="0.0km"
                            android:textColor="#ff13202d"
                            android:textSize="14sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        app:layout_constraintBottom_toTopOf="@id/llInfo"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="@id/tvName"
                        app:layout_constraintTop_toBottomOf="@id/tvName">

                        <com.common.library.widget.SimpleRatingBar
                            android:id="@+id/sRating"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:gradeHeight="16dp"
                            app:gradeWidth="16dp"
                            app:isEdit="false" />

                        <Space
                            android:layout_width="0dp"
                            android:layout_height="10dp"
                            android:layout_weight="1" />

                        <TextView
                            android:id="@+id/tvNum"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textColor="#ff13202d"
                            android:textSize="12sp" />
                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/llTime"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:orientation="horizontal"
                        app:layout_constraintTop_toBottomOf="@id/ivLogo">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="营业时间"
                            android:textColor="#ff13202d"
                            android:textSize="14sp" />


                        <TextView
                            android:id="@+id/tvYyTime"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="20dp"
                            android:text="00:00-23:00"
                            android:textColor="#ff13202d"
                            android:textSize="14sp" />

                        <Space
                            android:layout_width="0dp"
                            android:layout_height="10dp"
                            android:layout_weight="1" />

                        <LinearLayout
                            android:id="@+id/llTag"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal" />

                    </LinearLayout>


                </androidx.constraintlayout.widget.ConstraintLayout>


            </androidx.constraintlayout.widget.ConstraintLayout>


            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="@color/colorMain"
                android:fitsSystemWindows="false"
                android:gravity="center"
                app:layout_collapseMode="pin">

                <LinearLayout
                    android:id="@+id/llSearch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/order_shape_search_bg"
                    android:paddingStart="45dp"
                    android:paddingTop="5dp"
                    android:paddingEnd="45dp"
                    android:paddingBottom="5dp">

                    <EditText
                        android:id="@+id/etSearch"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:cursorVisible="true"
                        android:drawableStart="@mipmap/ic_search"
                        android:drawablePadding="15dp"
                        android:focusable="true"
                        android:gravity="center"
                        android:hint="搜索本店商品"
                        android:imeOptions="actionSearch"
                        android:inputType="text"
                        android:maxLines="1"
                        android:textColor="@color/white"
                        android:textCursorDrawable="@null"
                        android:textSize="16sp" />

                </LinearLayout>

                <ImageView
                    android:id="@+id/ivMore"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:padding="10dp"
                    android:src="@mipmap/ic_share_more" />
            </androidx.appcompat.widget.Toolbar>

        </com.google.android.material.appbar.CollapsingToolbarLayout>
    </com.google.android.material.appbar.AppBarLayout>

</merge>