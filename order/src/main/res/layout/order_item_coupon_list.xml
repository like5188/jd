<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">


    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/order_shape_titlebg_coupon"
        android:paddingStart="10dp"
        android:paddingTop="20dp"
        android:paddingEnd="10dp"
        android:paddingBottom="20dp">

        <com.common.library.widget.imageview.RoundedImageView
            android:id="@+id/ivLogo"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@drawable/order_shape_btn_gray_corner_5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:riv_corner_radius="5dp"
            app:riv_oval="false" />

        <TextView
            android:id="@+id/tvTitle"
            android:gravity="start"
            android:layout_width="0dp"
            app:layout_constraintStart_toEndOf="@id/ivLogo"
            android:layout_marginEnd="10dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:layout_marginStart="10dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toStartOf="@id/tvWaitUse"
            app:layout_constraintTop_toTopOf="@id/ivLogo"
            tools:text="功夫张面馆"
            android:textColor="#3013202d"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tvWaitUse"
            android:layout_width="wrap_content"
            android:gravity="center"
            android:layout_height="26dp"
            app:layout_constraintTop_toTopOf="@id/ivLogo"
            android:paddingHorizontal="12dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@drawable/order_shape_item_coupon"
            tools:text="去使用"
            android:textColor="#ffffffff"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tvCondition"
            android:layout_width="0dp"
            android:layout_marginEnd="10dp"
            android:ellipsize="end"
            android:maxLines="1"
            app:layout_constraintStart_toStartOf="@id/tvTitle"
            android:layout_height="wrap_content"
            app:layout_constraintBaseline_toBottomOf="@id/ivLogo"
            app:layout_constraintEnd_toStartOf="@id/tvEndTime"
            tools:text="满20减9元"
            android:textColor="#ffe51600"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tvEndTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBaseline_toBottomOf="@id/ivLogo"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="2022-02-28 到期"
            android:textColor="#30395877"
            android:textSize="12sp" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>