<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="130dp"
        android:background="@drawable/order_shape_titlebg_coupon"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:paddingVertical="10dp"
        android:paddingHorizontal="10dp"
        android:layout_height="180dp">

        <com.common.library.widget.imageview.RoundedImageView
            android:id="@+id/ivRecommendCover"
            android:layout_width="70dp"
            app:riv_corner_radius="5dp"
            app:riv_oval="false"
            android:layout_height="104dp"
            android:background="@drawable/order_shape_btn_gray_corner_5"
            android:scaleType="centerCrop"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvTitle"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="10dp"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintTop_toBottomOf="@id/ivRecommendCover"
            app:layout_constraintEnd_toStartOf="@id/tvJob"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="张山峰"
            android:textColor="#ff13202d"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tvJob"
            android:layout_width="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/tvTitle"
            app:layout_constraintStart_toEndOf="@id/tvTitle"
            android:layout_height="wrap_content"
            android:text="教练"
            android:textColor="#6513202d"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/tvDes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:layout_marginHorizontal="10dp"
            android:maxLines="2"
            tools:text="国家一级运动员"
            android:textColor="#6513202d"
            android:textSize="10sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
