<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/order_shape_titlebg_coupon"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:padding="20dp"
        android:text="请选择支付方式"
        android:textColor="#ff13202d"
        android:textSize="16sp"
        />


    <com.common.library.widget.payview.PayTypeView
        android:id="@+id/payTypeView"
        app:layout_constraintTop_toBottomOf="@id/tvTitle"
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toTopOf="@id/tvPayOrder"
        android:layout_width="match_parent"
        android:layout_height="0dp"/>

    <TextView
        android:id="@+id/tvPayOrder"
        android:layout_width="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_height="42dp"
        android:layout_marginHorizontal="80dp"
        android:background="@drawable/order_shape_btn"
        android:layout_marginBottom="40dp"
        android:gravity="center"
        android:text="去支付"
        android:textColor="#ffffffff"
        android:textSize="18sp" />

</androidx.constraintlayout.widget.ConstraintLayout>